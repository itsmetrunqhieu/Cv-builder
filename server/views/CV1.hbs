<div class="resume_wrapper">
  <div class="resume_left">
    <div class="resume_img">
      <input
        type="image"
        src="./assets/image/LeDoCaoThi.jpg"
        alt="resume_img"
        title="resume_img"
      />
    </div>
    <div class="resume_bottom">
      <div class="resume_item resume_contact">
        <div class="resume_title">My Contact</div>
        <!-- số điện thoại -->
        <div class="resume_info">
          <div class="resume_subtitle">Phone number</div>
          <div class="resume_subinfo">{{phoneNumber}}</div>
          <!-- email -->
          <div class="resume_subtitle">Email</div>
          <div class="resume_subinfo">{{email}}</div>
        </div>
      </div>
      <div class="resume_item resume_address">
        <div class="resume_title">Address</div>
        <div class="resume_info">{{address}}</div>
      </div>
      <div class="resume_item resume_skills">
        <div class="resume_title">Skills</div>
        <div class="resume_info">
          <div class="skills_list">
            {{#each skill}}
              <p>{{this}}</p>
            {{else}}
              <p>No content</p>
            {{/each}}
            <p>...</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="resume_right">
    <div class="resume_top">
      <div class="resume_item resume_namerole">
        <div class="name">{{name}}</div>
        <div class="role">{{role}}</div>
      </div>
    </div>
    <div class="info_decription">
      <div class="resume_item resume_background_sumary">
        <div class="resume_title">Background Sumary</div>
        <div class="resume_data">
          <p id="description">{{backgroundSummary}}
          </p>
        </div>
      </div>
      <div class="resume_item resume_work_history">
        <div class="resume_title">Work History</div>
        <div class="resume_data">
          <p{{workHistory.title}}</p>
          <ul>
            {{#each workHistory.description}}
            <li>{{this}}</li>
            {{else}}
            <li>No content</li>
            {{/each}}
          </ul>
        </div>
      </div>
      <div class="resume_item resume_education">
        <div class="resume_title">Education</div>
        <div class="resume_data">
          <p>{{education.title}}
          </p>
          <p>{{education.address}}</p>
        </div>
      </div>
    </div>
  </div>
</div>
